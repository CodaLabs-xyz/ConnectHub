# Wallet Connect Project ID (Required)
# Get your project ID from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Self.xyz Configuration (Required for Self integration)
NEXT_PUBLIC_SELF_APP_ID=your_self_app_id_here
NEXT_PUBLIC_SELF_SCOPE=farcaster-miniapp-template
NEXT_PUBLIC_SELF_APP_NAME=Farcaster Mini App Template
NEXT_PUBLIC_SELF_LOGO_URL=
NEXT_PUBLIC_SELF_USE_MOCK=false
# Farcaster frame URL for deeplink callback (e.g., https://warpcast.com/~/composer?embeds[]=YOUR_FRAME_URL)
NEXT_PUBLIC_SELF_DEEPLINK_CALLBACK=

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Farcaster Mini App Template

# Farcaster Mini App Configuration
NEXT_PUBLIC_APP_ICON_URL=
NEXT_PUBLIC_APP_IMAGE_URL=
NEXT_PUBLIC_APP_SPLASH_URL=
NEXT_PUBLIC_APP_SPLASH_BG_COLOR=#1e40af

# Chain Configuration (Optional - defaults to Base)
# Base Mainnet: 8453
# Base Sepolia: 84532
NEXT_PUBLIC_CHAIN_ID=8453
